<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PA4_Franz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/GURed</item>
        <item name="colorPrimaryVariant">@color/GUDarkBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/VictoryBlue</item>
        <item name="colorSecondaryVariant">@color/GUDarkBlue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/GUDarkBlue</item>
        <item name="android:textColorSecondary">@color/GURed</item>
        <item name="android:textColorTertiary">@color/VictoryBlue</item>
    </style>
</resources>